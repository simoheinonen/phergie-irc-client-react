{
    "name": "phergie/phergie-irc-client-react",
    "description": "IRC client library built on React",
    "keywords": [
        "irc",
        "client",
        "react"
    ],
    "license": "BSD-2-Clause",
    "support": {
        "email": "team@phergie.org",
        "irc": "irc://irc.freenode.net/phergie",
        "issues": "https://github.com/phergie/phergie-irc-client-react/issues",
        "source": "https://github.com/phergie/phergie-irc-client-react"
    },
    "require": {
        "php": "^8.3",
        "phergie/phergie-irc-parser": "dev-master",
        "phergie/phergie-irc-generator": "dev-master",
        "phergie/phergie-irc-connection": "dev-master",
        "react/event-loop": "^1.5",
        "react/stream": "^1.4",
        "react/socket": "^1.3",
        "react/dns": "^1.13.0",
        "react/promise": "^2.11",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.7"
    },
    "conflict": {
        "phergie/phergie-irc-plugin-react-pong": "*"
    },
    "autoload": {
        "psr-4": {
            "Phergie\\Irc\\Client\\React\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phergie\\Irc\\Tests\\Client\\React\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/simoheinonen/phergie-irc-connection"
        },
        {
            "type": "vcs",
            "url": "https://github.com/simoheinonen/phergie-irc-generator"
        },
        {
            "type": "vcs",
            "url": "https://github.com/simoheinonen/phergie-irc-parser"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "phake/phake": "^4.5",
        "dg/bypass-finals": "^1.8",
        "rector/rector": "^1.2"
    }
}
